<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<div>
	  <input type="text" id="mail" class="form-control" placeholder="Nom d'utilisateur">
</div>

  <div></br>
	  <input type="password" id="password" class="form-control" placeholder="Mot de passe">
	

  <% if devise_mapping.rememberable? -%>
    <div></br><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div></br><%= f.submit "Sign in", class: 'btn-group btn-group-lg' %></div>
<% end %>

<%= render "devise/shared/links" %>
